
#ifndef IOSCANNER_H
#define	IOSCANNER_H

#include <string>

class IOScanner {
public:
    IOScanner();
    int ReadInt();
    std::string ReadString(int limit);
    tm ReadDate();

    /**
     * @brief Member function to read a time from standard in. Dates must be entered in
     * the format HH:mm
     * @return time structure containing the time that was read in
     */
    tm ReadTime();
    virtual ~IOScanner();
private:

};

#endif	/* CONSOLE_INPUT_H */

